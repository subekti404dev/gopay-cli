{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}